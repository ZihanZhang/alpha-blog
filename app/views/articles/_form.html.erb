<% if @article.errors.any? %>
  <h2>Error</h2>
  <ul>
    <% @article.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @article, local: true, data: { turbo: false }) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>